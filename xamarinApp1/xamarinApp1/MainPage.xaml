<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:xamarinApp1"
             x:Class="xamarinApp1.MainPage">
    
    <!--iOS対応の余白設定-->
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="iOS">0,20,0,0</On>
        </OnPlatform>
    </ContentPage.Padding>


    <AbsoluteLayout>
        <BoxView Color="Red"
                 AbsoluteLayout.LayoutBounds="10,10,100,100"/>
        <BoxView Color="Blue"
                 AbsoluteLayout.LayoutBounds=".3,.3,.3,.3"
                 AbsoluteLayout.LayoutFlags="All"/>
        <BoxView Color="Olive"
                 AbsoluteLayout.LayoutBounds=".0,.5,25,250"
                 AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <BoxView Color="Yellow"
                 AbsoluteLayout.LayoutBounds=".5,.0,100,50"
                 AbsoluteLayout.LayoutFlags="PositionProportional"/>

    </AbsoluteLayout>

</ContentPage>
